<flex-config xmlns="http://www.adobe.com/2006/flex-config">
    <target-player>10.0</target-player>
    <compiler>
        <debug>true</debug>
        <theme>
            <!-- The Flex 4 default theme is Spark. -->
            <filename>${flexlib}/themes/Halo/halo.swc</filename>
        </theme>
        <source-path>
            <path-element>src</path-element>
        </source-path>
    </compiler>
    <file-specs>
        <path-element>src/FlashChat.mxml</path-element>
    </file-specs>
    <output>out/production/flashChat/FlashChat.swf</output>
</flex-config>